generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model aluno {
  id_aluno        Int      @id @default(autoincrement())
  nome            String?
  data_nascimento DateTime @db.Date        
  email           String   @unique
  treinos         treino[]
}

model treino {
  id_treino   Int      @id @default(autoincrement())
  descricao   String
  data_inicio DateTime @default(now()) @db.Timestamptz(6) 
  aluno_id    Int

  aluno aluno @relation(fields: [aluno_id], references: [id_aluno], onDelete: Cascade)

  @@index([aluno_id])
}
